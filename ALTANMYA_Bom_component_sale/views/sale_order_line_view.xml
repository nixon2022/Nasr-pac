            </xpath>
            <xpath expr="//page[1]" position="after">
                <page string="Component" name="com">
                    <field name="component_compute" invisible="1"/>
                    <field name="component" create="true" edit="true" widget="one2many"
                           attrs="{'readonly': [('state', '=', 'sale')]}">
                        <tree string="Components" editable="bottom" create="true">
                            <field name="new_product" context="{'active_id': parent.id}"/>
                            <field name="bom_order_line" attrs="{'readonly': [('new_product', '=', False)]}"/>
                            <field name="bom_id" readonly="1" invisible="1"/>
                            <field name="new_quan"/>
                            <field name="new_uom"/>
                            <field name="order_line_from_parent" invisible="1"/>
                        </tree>
                        <form>
                            <sheet>
                                <group>
                                    <field name="new_product" context="{'active_id': parent.id}"/>
                                    <field name="bom_order_line" attrs="{'readonly': [('new_product', '=', False)]}"/>
                                    <field name="bom_id" readonly="1" invisible="1"/>
                                    <field name="new_quan"/>
                                    <field name="new_uom"/>
                                    <field name="order_line_from_parent" invisible="1"/>

                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
