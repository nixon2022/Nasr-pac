<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_bom_inherited" model="ir.ui.view">
        <field name="name">mrp.bom.inherited</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[1]" position="after">
                <page string="Remarks" name="remarks_page">
                    <group>
                        <field name="remarks"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>