<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_inherited" model="ir.ui.view">
        <field name="name">product.template.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[1]" position="after">
                <page string="Additional Information" name="additional_information">
                    <group>
                        <group>
                            <field name="outs"/>
                            <field name="color"/>
                            <field name="coating"/>
                            <field name="gsm_substance"/>
                            <field name="sub_category"/>
                            <field name="process"/>
                        </group>
                        <group>
                            <field name="sheet_width"/>
                            <field name="sheet_length"/>
                            <field name="sheet_width_cut"/>
                            <field name="sheet_length_cut"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="pack_qty"/>
                            <field name="product_group"/>
                            <field name="dimension"/>
                        </group>
                        <group>
                            <field name="No_of_carton"/>
                            <field name="No_of_pcs"/>
                            <field name="product_number"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>