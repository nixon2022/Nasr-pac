<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_line_inherited" model="ir.ui.view">
        <field name="name">sale.order.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="to_ID"/>
            </field>
            <field name="date_order" position="after">
                <field name="received_on"/>
            </field>
            <field name="client_order_ref" position="after">
                <field name="p_o"/>
            </field>
            <field name="commitment_date" position="after">
                <field name="new_commitment_date" invisible="1"/>
            </field>
            <xpath expr="//tree[1]/field[7]" position="after">
                <field name="manufacturing_order_id" invisible="1"/>
                <field name="delivery_date_sale_order_line"/>
                <field name="job_type"/>
                <field name="finishing"/>
            </xpath>
        </field>
    </record>
</odoo>