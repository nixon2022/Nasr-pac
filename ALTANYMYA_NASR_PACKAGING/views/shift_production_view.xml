<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.actions.act_window" id="action_shift_production">
        <field name="name">Shift Production</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shift.production</field>
        <field name="view_mode">tree,pivot,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                To create a new shift production order, click on the "Create" button.
            </p>
        </field>
    </record>

    <record id="shift_production_form" model="ir.ui.view">
        <field name="name">shift.production.form</field>
        <field name="model">shift.production</field>
        <field name="arch" type="xml">
            <form string="Shift Production" version="7.0">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="sequence"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="shift"/>
                            <field name="job_ticket"/>
                            <field name="finished_product"/>
                            <field name="operation"/>
                            <field name="operator"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="duration_from"/>
                            <field name="duration_to"/>
                            <field name="duration"/>
                            <field name="maintenance_time"/>
                            <field name="make_ready_time"/>
                        </group>
                    </group>
                    <group>
                        <field name="quantity_done"/>
                        <field name="outs"/>
                        <field name="sheets_done"/>
                        <field name="mr" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="shift_production_tree" model="ir.ui.view">
        <field name="name">shift.production.tree</field>
        <field name="model">shift.production</field>
        <field name="arch" type="xml">
            <tree string="Shift Productions" editable="top" sample="1" expand="1">
                <field name="edit_line" invisible="0"/>
                <field name="sequence"/>
                <field name="mr" invisible="1"/>
                <field name="shift" attrs="{'readonly':[('edit_line', '=', False)]}"/>
                <field name="job_ticket" attrs="{'readonly':[('edit_line', '=', False)]}"/>
                <field name="finished_product" attrs="{'readonly':[('edit_line', '=', False)]}"/>
                <field name="operation" attrs="{'readonly':[('edit_line', '=', False)]}"/>
                <field name="operator" attrs="{'readonly':[('edit_line', '=', False)]}"/>
                <field name="date" attrs="{'readonly':[('edit_line', '=', False)]}"/>
                <field name="duration_from" attrs="{'readonly':[('edit_line', '=', False)]}"/>
                <field name="duration_to" attrs="{'readonly':[('edit_line', '=', False)]}"/>
                <field name="duration" attrs="{'readonly':[('edit_line', '=', False)]}"/>
                <field name="machine_time" optional="hide" attrs="{'readonly':[('edit_line', '=', False)]}"/>
                <field name="maintenance_time" optional="hide" attrs="{'readonly':[('edit_line', '=', False)]}"/>
                <field name="make_ready_time" optional="hide" attrs="{'readonly':[('edit_line', '=', False)]}"/>
                <field name="job_ticket_qty" invisible="1"/>
                <field name="quantity_done" attrs="{'readonly':[('edit_line', '=', False)]}"/>
                <field name="outs" attrs="{'readonly':[('edit_line', '=', False)]}"/>
                <field name="sheets_done" attrs="{'readonly':[('edit_line', '=', False)]}"/>
            </tree>
        </field>
    </record>

    <record id="shift_production_pivot" model="ir.ui.view">
        <field name="name">shift.production.pivot</field>
        <field name="model">shift.production</field>
        <field name="arch" type="xml">
            <pivot string="Pipeline Analysis" sample="1"/>
        </field>
    </record>

    <menuitem id="shift_production"
              name="Shift Production"
              parent="mrp.menu_mrp_manufacturing"
              sequence="10"
              action="action_shift_production"/>
</odoo>