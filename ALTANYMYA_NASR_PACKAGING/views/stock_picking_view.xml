<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_picking_form_inherited" model="ir.ui.view">
        <field name="name">stock.picking.inherited</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="random_unique_number" invisible="1"/>
                <field name="partial_delivery" invisible="1"/>
                <field name="sale_order_id" invisible="1"/>
            </field>
            <xpath expr="//field[20]" position="after">
                <field name="delivery_date_per_item"/>
                <field name="lead_days" invisible="1"/>
            </xpath>
            <xpath expr="//page[3]/group[1]/group[1]" position="after">
                <group>
                    <field name="plate_number"/>
                    <field name="driver"/>
                    <field name="mobile_number" widget="phone"/>
                    <field name="transporter"/>
                </group>
            </xpath>
            <xpath expr="//page[4]" position="after">
                <page string="Remarks" name="remarks">
                    <field name="remarks"/>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_line_inherited" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree.mrp</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="pallet"/>
                <field name="job_ticket_id"/>
                <field name="No_of_carton"/>
                <field name="No_of_pcs"/>
                <field name="No_of_lose_pallet"/>
                <field name="delivery_date"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_picking_type_nasr_inherited" model="ir.ui.view">
        <field name="name">stock.picking.type.inherit_nasr</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">
            <field name="use_existing_lots" position="after">
                <field name="generate_lot_id_nasr"/>
            </field>
        </field>
    </record>

</odoo>