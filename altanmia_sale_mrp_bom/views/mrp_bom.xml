<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_bom_form_view_inherit_extension" model="ir.ui.view">
        <field name="name">mrp.bom.form.view.inherit.extension</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_qty']" position="after">
                <field name="from_sale" invisible="1"/>
                <field name="forecast_availability"
                       string="Reserved"
                       attrs="{'column_invisible': [('parent.from_sale','=', False)]}"
                       widget="forecast_widget"/>
                <field name="available" attrs="{'column_invisible': [('parent.from_sale','=', False)]}"/>
                <field name="qty_needed" attrs="{'column_invisible': [('parent.from_sale','=', False)]}"/>
            </xpath>

            <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_qty']" position="replace">
                <field name="product_qty" string="Bom Component QTY"/>
            </xpath>

            <xpath expr="//group/div[field[@name='product_qty']]" position="after">
                <field name="origin" widget="boolean_toggle"/>
                <field name="create_as_new" widget="boolean_toggle"/>
            </xpath>

            <xpath expr="//field[@name='type']" position="after">
                <field name="from_sale" invisible="1"/>
                <field name="sale_qty" attrs="{'invisible':[('from_sale','=', False)]}"/>
                <field name="unit_cost" attrs="{'invisible':[('from_sale','=', False)]}"/>
            </xpath>
            <xpath expr="//div[hasclass('oe_chatter')]" position="replace">
                <div class="op_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" colspan="4" nolabel="1"/>
                </div>
            </xpath>

        </field>
    </record>
</odoo>