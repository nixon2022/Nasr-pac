<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_order_line_tree" model="ir.ui.view">
        <field name="name">altanmia_sale_mrp_bom.sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree[1]/field[@name='product_template_id']" position="after">
                <field name="bom_id"
                       context="{
                       'default_product_id': product_id,
                       'default_product_tmpl_id': product_template_id,
                       'default_sale_qty': product_uom_qty,
                       'default_from_sale': True}"
                        options='{"always_reload": True}'/>
            </xpath>
        </field>
    </record>
</odoo>
